    <script>
        // Exercise answers
        const answers = {
            exercise1: ['b', 'c', 'e', 'a', 'f', 'g', 'h', 'd'],
            exercise2: ['F', 'T', 'F', 'F', 'T', 'T', 'T', 'F'],
            exercise3: ['discovered', 'went', 'bought', 'wrote', 'walked', 'sent', 'opened', 'found', 'drew', 'got', 'didn\'t know', 'didn\'t expect'],
            exercise4: ['has', 'sent', 'has', 'received', 'has', 'grown', 'has', 'kept', 'has', 'made', 'Have', 'tried', 'hasn\'t', 'lost', 'hasn\'t', 'stopped'],
            exercise5: ['discovered', 'sent', 'has received', 'got', 'has never heard']
        };

        // Exercise 5 selections
        let exercise5Selections = {};

        function selectChoice(element, choice) {
            const question = element.dataset.question;
            const questionElements = document.querySelectorAll(`[data-question="${question}"]`);
            
            // Remove selected class from all choices for this question
            questionElements.forEach(el => el.classList.remove('selected'));
            
            // Add selected class to clicked choice
            element.classList.add('selected');
            
            // Store selection
            exercise5Selections[question] = choice;
        }

        function checkExercise1() {
            let correct = 0;
            for (let i = 1; i <= 8; i++) {
                const input = document.getElementById(`vocab${i}`);
                const userAnswer = input.value.toLowerCase().trim();
                const correctAnswer = answers.exercise1[i-1].toLowerCase();
                
                if (userAnswer === correctAnswer) {
                    input.classList.add('correct');
                    input.classList.remove('incorrect');
                    correct++;
                } else {
                    input.classList.add('incorrect');
                    input.classList.remove('correct');
                }
            }
            showScore('score1', correct, 8);
        }

        function checkExercise2() {
            let correct = 0;
            for (let i = 1; i <= 8; i++) {
                const input = document.getElementById(`tf${i}`);
                const userAnswer = input.value.toUpperCase().trim();
                const correctAnswer = answers.exercise2[i-1];
                
                if (userAnswer === correctAnswer) {
                    input.classList.add('correct');
                    input.classList.remove('incorrect');
                    correct++;
                } else {
                    input.classList.add('incorrect');
                    input.classList.remove('correct');
                }
            }
            showScore('score2', correct, 8);
        }

        function checkExercise3() {
            let correct = 0;
            const inputIds = ['ps1', 'ps2', 'ps3', 'ps4', 'ps5', 'ps6', 'ps7', 'ps8', 'ps9', 'ps10', 'ps11', 'ps12'];
            
            for (let i = 0; i < inputIds.length; i++) {
                const input = document.getElementById(inputIds[i]);
                const userAnswer = input.value.toLowerCase().trim();
                const correctAnswer = answers.exercise3[i].toLowerCase();
                
                if (userAnswer === correctAnswer) {
                    input.classList.add('correct');
                    input.classList.remove('incorrect');
                    correct++;
                } else {
                    input.classList.add('incorrect');
                    input.classList.remove('correct');
                }
            }
            showScore('score3', correct, inputIds.length);
        }

        function checkExercise4() {
            let correct = 0;
            const inputIds = ['pp1', 'pp2', 'pp3', 'pp4', 'pp5', 'pp6', 'pp7', 'pp8', 'pp9', 'pp10', 'pp11', 'pp12', 'pp13', 'pp14', 'pp15', 'pp16'];
            
            for (let i = 0; i < inputIds.length; i++) {
                const input = document.getElementById(inputIds[i]);
                const userAnswer = input.value.toLowerCase().trim();
                const correctAnswer = answers.exercise4[i].toLowerCase();
                
                if (userAnswer === correctAnswer) {
                    input.classList.add('correct');
                    input.classList.remove('incorrect');
                    correct++;
                } else {
                    input.classList.add('incorrect');
                    input.classList.remove('correct');
                }
            }
            showScore('score4', correct, inputIds.length);
        }

        function checkExercise5() {
            let correct = 0;
            const questions = ['5_1', '5_2', '5_3', '5_4', '5_5'];
            
            for (let i = 0; i < questions.length; i++) {
                const question = questions[i];
                const userAnswer = exercise5Selections[question];
                const correctAnswer = answers.exercise5[i];
                const questionElements = document.querySelectorAll(`[data-question="${question}"]`);
                
                if (userAnswer === correctAnswer) {
                    questionElements.forEach(el => {
                        if (el.textContent.trim() === correctAnswer) {
                            el.classList.add('correct');
                            el.classList.remove('incorrect');
                        }
                    });
                    correct++;
                } else {
                    questionElements.forEach(el => {
                        if (el.classList.contains('selected')) {
                            el.classList.add('incorrect');
                            el.classList.remove('correct');
                        }
                        if (el.textContent.trim() === correctAnswer) {
                            el.style.border = '2px solid #28a745';
                            el.style.fontWeight = 'bold';
                        }
                    });
                }
            }
            showScore('score5', correct, questions.length);
        }

        function showScore(scoreId, correct, total) {
            const scoreElement = document.getElementById(scoreId);
            const percentage = Math.round((correct / total) * 100);
            let message = '';
            let emoji = '';
            
            if (percentage >= 90) {
                message = 'Excellent work!';
                emoji = 'üåü';
            } else if (percentage >= 80) {
                message = 'Great job!';
                emoji = 'üéâ';
            } else if (percentage >= 70) {
                message = 'Good effort!';
                emoji = 'üëç';
            } else if (percentage >= 60) {
                message = 'Keep practicing!';
                emoji = 'üìö';
            } else {
                message = 'Try again!';
                emoji = 'üí™';
            }
            
            scoreElement.innerHTML = `${emoji} Score: ${correct}/${total} (${percentage}%) - ${message}`;
            scoreElement.style.display = 'block';
        }

        // Auto-capitalize T/F inputs
        document.querySelectorAll('.tf-input').forEach(input => {
            input.addEventListener('input', function() {
                this.value = this.value.toUpperCase();
            });
        });

        // Auto-capitalize vocab inputs
        document.querySelectorAll('.vocab-input').forEach(input => {
            input.addEventListener('input', function() {
                this.value = this.value.toLowerCase();
            });
        });

        // Clear styling when user starts typing again
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', function() {
                this.classList.remove('correct', 'incorrect');
            });
        });
    </script>
</body>
</html>
